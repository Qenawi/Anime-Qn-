<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:tools="http://schemas.android.com/tools"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:layout_width="match_parent" android:padding="5dp"
                                android:layout_height="wrap_content">
    <carbon.widget.TextView android:layout_width="wrap_content"
                            tools:text="Kiss Cartoon"
                            android:textColor="@android:color/black"
                            android:padding="7dp"
                            app:carbon_cornerRadius="12dp"
                            android:layout_margin="5dp"
                            android:background="@color/carbon_green_500"
                            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                            android:id="@+id/dname" android:layout_marginTop="8dp"/>
    <carbon.widget.TextView android:layout_width="wrap_content"
                            android:text="Watch"
                            android:id="@+id/watch"
                            android:textColor="@android:color/black"
                            android:padding="7dp"
                            app:carbon_cornerRadius="12dp"
                            android:layout_margin="5dp"
                            android:background="@color/carbon_lightBlue_500"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/quality"
                            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"/>
    <carbon.widget.TextView android:layout_width="wrap_content"
                            tools:text="720 P"
                            android:textColor="@android:color/black"
                            android:padding="7dp"
                            app:carbon_cornerRadius="12dp"
                            android:layout_margin="5dp"
                            android:background="@color/carbon_blue_300"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/dname"
                            android:layout_marginStart="30dp"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintVertical_bias="0.0" android:id="@+id/quality"/>
</carbon.widget.ConstraintLayout>